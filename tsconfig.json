{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"isolatedModules": true,
		"strict": true,
		"outDir": "dist",
		"declaration": true,
		"sourceMap": true,
		"types": ["jest", "node"]
	},
	"include": ["index.ts", "src/**/*", "tests/**/*"],
	"exclude": ["node_modules", "dist"]
}
